{
  "manifest_version": 3,
  "name": "DeepSeek Shortcuts",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://chat.deepseek.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.deepseek.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "commands": {
    "scroll-top": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Scroll to first message"
    },
    "scroll-bottom": {
      "suggested_key": {
        "default": "Alt+Z"
      },
      "description": "Scroll to last message"
    },
    "scroll-UpOneMsg": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "Scroll Up One Message"
    },
    "scroll-DownOneMsg": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Scroll Down One Message"
    }
  }
}
